<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}})</span>
      </div>
      <div class="meta">
      by {{post.user.username}} 
 
        |
        <a href="/post/{{post.id}}">{{post.posts.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>







